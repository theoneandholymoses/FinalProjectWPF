<Page x:Class="FinalProjectWPF.Projects.DontDropTheMillion.DontDropTheMillion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProjectWPF.Projects.DontDropTheMillion"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DontDropTheMillion">
    <Grid x:Name="mainGrid">
        <Grid.Background>
            <ImageBrush ImageSource="Assets\Background.jpg" Stretch="Fill"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="145*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="148*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="85*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="GoBack" Grid.Column="6" Grid.Row="0" Height="NaN"  Width="60" Click="GoBack_Click" Focusable="False" Margin="0,15,0,14" Style="{StaticResource WideButton}" HorizontalAlignment="Center">
            <Image Source="Assets\ExitIcon.png" Style="{StaticResource MenuButtonIcon}"/>
        </Button>

        <Grid Grid.Column="3" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0" Grid.Column="0" Width="120">
                <TextBlock Foreground="White" Text="LVL :" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="2" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="3" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="4" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="5" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="6" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="7" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="8" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="9" Height="10" Background="Cyan" Margin="2"/>
            <Grid Grid.Row="0" Grid.Column="10" Height="10" Background="Cyan" Margin="2"/>

            <StackPanel Grid.Column="0" Grid.ColumnSpan="10" Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" Height="26">
                <Label Content="Question:" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
                <Label x:Name="QuestionNum" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,0,1" Grid.Row="1" >
            <Label x:Name="Timer" Content="60" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Foreground="White"/>
            <Label x:Name="TimerText" Content="Time Left:" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden" Foreground="White"/>
        </StackPanel>



        <Button x:Name="Catagory1" Grid.Column="2" Grid.Row="1" Click="Catagory1_Click" Content="catagory1" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="40" Style="{StaticResource WideButton}" Margin="0,22,0,0" Width="150"/>
        <Button x:Name="Catagory2" Grid.Column="4" Grid.Row="1" Click="Catagory2_Click" Content="catagory2" HorizontalAlignment="Center"  VerticalAlignment="Top" Height="40" Style="{StaticResource WideButton}" Margin="0,22,0,0" Width="150"/>
        <Label x:Name="QuestionLabel" Grid.Column="2" Grid.ColumnSpan="3" Grid.Row="2" Visibility="Visible" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Height="50"/>
        <Label x:Name="TheRightAnswer" Grid.Column="2" Grid.Row="2" Content="" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White" Height="50" Margin="0,20,0,0"/>

        <Grid x:Name="A0MainGrid" Grid.Column="1" Grid.Row="3" Margin="0,6,0,5">
            <Grid.Background>
                <ImageBrush ImageSource="Assets\QuestionBlock.png" Stretch="Fill"/>
            </Grid.Background>

            <Grid x:Name="A0Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="A0Img" Source="Assets/ExitIcon.png" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="4" Visibility="Hidden"/>
                <TextBlock x:Name="Answer0" Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" Visibility="Visible" Text="Answer 1" VerticalAlignment="Bottom"  Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" MaxHeight="50" />
                <Label x:Name="Answer1Bet" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Visibility="Visible" Content="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <Button MouseEnter="A1Down_MouseDown" MouseLeave="A1Down_MouseUp"  x:Name="A1Down" Grid.Row="3" Grid.Column="1" Visibility="Hidden" Content=" - " HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
                <Button MouseEnter="A1Up_MouseDown" MouseLeave="A1Up_MouseUp"  x:Name="A1Up" Grid.Row="3" Grid.Column="3" Visibility="Hidden" Content=" + " HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
            </Grid>
        </Grid>

        <Grid x:Name="A1MainGrid" Grid.Column="2" Grid.Row="3" Margin="0,6,0,5">
            <Grid.Background>
                <ImageBrush ImageSource="Assets\QuestionBlock.png" Stretch="Fill"/>
            </Grid.Background>

            <Grid x:Name="A1Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="A1Img" Source="Assets/ExitIcon.png" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="4" Visibility="Hidden"/>

                <TextBlock x:Name="Answer1"  Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" Visibility="Visible" Text="Answer 2" VerticalAlignment="Bottom"  Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" MaxHeight="50" />
                <Label x:Name="Answer2Bet"  Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Visibility="Visible" Content="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <Button MouseEnter="A2Down_MouseDown" MouseLeave="A2Down_MouseUp" x:Name="A2Down" Grid.Row="3" Grid.Column="1" Visibility="Hidden" Content=" - " HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
                <Button MouseEnter="A2Up_MouseDown" MouseLeave="A2Up_MouseUp" x:Name="A2Up" Grid.Row="3" Grid.Column="3" Visibility="Hidden" Content=" + " HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
            </Grid>
        </Grid>

        <Grid x:Name="A2MainGrid" Grid.Column="4" Grid.Row="3" Margin="0,6,0,5">
            <Grid.Background>
                <ImageBrush ImageSource="Assets\QuestionBlock.png" Stretch="Fill"/>
            </Grid.Background>

            <Grid x:Name="A2Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>
                <Image x:Name="A2Img" Source="Assets/ExitIcon.png" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="4" Visibility="Hidden"/>

                <TextBlock x:Name="Answer2"  Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" Visibility="Visible" Text="Answer 3" VerticalAlignment="Bottom"  Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" MaxHeight="50" />
                <Label x:Name="Answer3Bet" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Visibility="Visible" Content="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <Button MouseEnter="A3Down_MouseDown" MouseLeave="A3Down_MouseUp"  x:Name="A3Down" Grid.Row="3" Grid.Column="1" Visibility="Hidden" Content=" - " HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
                <Button MouseEnter="A3Up_MouseDown" MouseLeave="A3Up_MouseUp" x:Name="A3Up" Grid.Row="3" Grid.Column="3" Visibility="Hidden" Content=" + " HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
            </Grid>
        </Grid>

        <Grid x:Name="A3MainGrid" Grid.Column="5" Grid.Row="3" Margin="0,6,0,5">
            <Grid.Background>
                <ImageBrush ImageSource="Assets\QuestionBlock.png" Stretch="Fill"/>
            </Grid.Background>

            <Grid x:Name="A3Grid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2.5*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="1.3*"/>
                    <RowDefinition Height="0.6*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.4*"/>
                </Grid.ColumnDefinitions>

                <Image x:Name="A3Img" Source="Assets/ExitIcon.png" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="4" Visibility="Hidden"/>

                <TextBlock x:Name="Answer3"  Grid.RowSpan="2" Grid.Column="1" Grid.ColumnSpan="3" Visibility="Visible" Text="Answer 4" VerticalAlignment="Bottom"  Foreground="White" TextWrapping="Wrap" HorizontalAlignment="Center" MaxHeight="50" />
                <Label x:Name="Answer4Bet" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Visibility="Visible" Content="0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="White"/>
                <Button MouseEnter="A4Down_MouseDown" MouseLeave="A4Down_MouseUp" x:Name="A4Down" Grid.Row="3" Grid.Column="1" Visibility="Hidden" Content=" - " HorizontalAlignment="Left" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
                <Button MouseEnter="A4Up_MouseDown" MouseLeave="A4Up_MouseUp" x:Name="A4Up" Grid.Row="3" Grid.Column="3" Visibility="Hidden" Content=" + " HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource TopButton}"/>
            </Grid>
        </Grid>


        <Label x:Name="UserMoney" Grid.Column="3" Grid.Row="3" Content="1000000" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" Height="30" Width="60"/>
        <Button x:Name="SubmitQuestion" Grid.Column="3" Grid.Row="3" Visibility="Hidden" Content="Submit" HorizontalAlignment="Center" VerticalAlignment="Top" Click="SubmitAnswer" Height="30" Width="54" Margin="0,95,0,0" Style="{StaticResource WideButton}"/>
        <Button x:Name="ResetGameButton" Grid.Column="3" Grid.Row="3" Visibility="Hidden" Content="Reset" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ResetGame" Height="30" Width="54" Margin="0,95,0,0" Style="{StaticResource WideButton}"/>
    </Grid>
</Page>
