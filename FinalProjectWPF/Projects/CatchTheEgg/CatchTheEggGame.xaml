<Page x:Class="FinalProjectWPF.Projects.CatchTheEgg.CatchTheEggGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FinalProjectWPF.Projects.CatchTheEgg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CatchTheEggGame">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Background.jpg"/>
        </Grid.Background>

        <Canvas Name="MyCanvas" Background="LightBlue" Focusable="True" MouseMove="Canvas_MouseMove">
            <Button Canvas.Left="15" Canvas.Top="10" x:Name="GoBack" Height="NaN"  Width="60" Focusable="False" Style="{StaticResource WideButton}" HorizontalAlignment="Center" Click="GoBack_Click">
                <Image Source="Assets\ExitIcon.png" Style="{StaticResource MenuButtonIcon}"/>
            </Button>
            <Label Name="ScoreText" FontSize="20" Canvas.Left="80" Canvas.Top="20">Score: 0</Label>
            <Label Name="Hearts" FontSize="20" Canvas.Left="537" Canvas.Top="20" HorizontalAlignment="Left" VerticalAlignment="Center">Hearts: 5</Label>

            <Rectangle Name="Basket" Width="{Binding Size}" Height="80" Fill="Orange" Canvas.Left="295" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Page>
