<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="IconsBackground" Color="#FF7C7373"/>
    <SolidColorBrush x:Key="SelectedIconColor" Color="AliceBlue"/>

    <Style x:Key="GamesIcons" TargetType="Image">
        <Setter Property="Height" Value="300"></Setter>
        <Setter Property="Width" Value="150"></Setter>

    </Style>

    <Style x:Key="FooterIcons" TargetType="Image">
        <Setter Property="Height" Value="350"></Setter>
        <Setter Property="Width" Value="200"></Setter>
        <Setter Property="Margin" Value="30"></Setter>
    </Style>
</ResourceDictionary>